<!DOCTYPE html>
<html>
  <head>
    <title>Jul</title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>

  <div id="header">
    <%= image_tag @shop.logo.url if @shop.logo.exists? %>
  </div>

  <% if customer_signed_in? %>
    <div id="nav">
      <ul>
        <li><%= link_to_unless_current t('welcome'), "/#{@shop.link}" %></li>
        <li>
          <%= link_to_unless_current t('presents'), shop_products_path(@shop) %>
        </li>
        <li><%= link_to t('log_out'), destroy_customer_session_path(@shop), method: :delete %></li>
      </ul>
    </div>
  <% end %>

  <div id="content">
    <%= yield %>
  </div>

  <div id="footer">
  </div>

  </body>
</html>
